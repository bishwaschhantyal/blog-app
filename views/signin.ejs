<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Sign in</title>
    <style>
      body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 600px;
      margin-top: 50px;
      background-color: #ffffff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    .form-label {
      font-weight: bold;
      font-size: 1.1em;
    }

    .form-text {
      font-size: 0.9em;
      color: #6c757d;
    }

    .form-check-input {
      margin-top: 0.3em;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #004085;
    }

    a {
      color: #007bff;
      text-decoration: none;
    }

    a:hover {
      color: #0056b3;
      text-decoration: underline;
    }

    p {
      margin-top: 1em;
      font-size: 0.9em;
    }

    .error {
      color: red;
      margin-top: 10px;
    }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container">
      <% if (typeof error !== 'undefined') { %>
      <div class="error"><%= error %></div>
      <% } %> 
      <%- include("./partials/signinForm") %>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
